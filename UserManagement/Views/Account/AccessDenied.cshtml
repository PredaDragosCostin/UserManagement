@{
    ViewData["Title"] = "Access Denied";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-warning">
            <div class="card-header bg-warning text-dark">
                <h4 class="mb-0">
                    <i class="fas fa-exclamation-triangle"></i> Access Denied
                </h4>
            </div>
            <div class="card-body text-center">
                <p class="card-text">You don't have permission to access this resource.</p>
                <p class="text-muted">Please contact your administrator if you believe this is an error.</p>
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Go to Home</a>
            </div>
        </div>
    </div>
</div>